def calculate_square_and_cube(number):
    square = number ** 2
    cube = number ** 3
    return square, cube

def main():
    number = float(input("Enter a decimal number: "))
    square, cube = calculate_square_and_cube(number)
    print(f"Square of {number}: {square}")
    print(f"Cube of {number}: {cube}")

if __name__ == "__main__":
    main()
